<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".KarnaughMap.MainKarnaughMap">


    <!--    Header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/shadow"
        android:outlineSpotShadowColor="@color/shadow"
        android:background="@drawable/shadow"
        >

        <!--        Back Icon-->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/ripple_back_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Karnaugh Map"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsbold"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select number of Variables:"
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dropdownButton"
                android:layout_marginVertical="20dp"
                android:padding="20dp"

                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon="@drawable/dropdown"
                app:iconGravity="end"
                app:iconTint="@color/primary"
                android:fontFamily="@font/poppinssemibold"
                android:paddingHorizontal="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="10dp"
                android:paddingVertical="15dp"
                android:stateListAnimator="@null"
                android:text="3 Variables"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                android:textSize="12sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="12dp"
                app:rippleColor="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Click on the cells to choose your input:"
                android:fontFamily="@font/poppinsregular"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>
            <!--            TODO Table-->
            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:stretchColumns="*"
                android:padding="20dp"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/equal2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:id="@+id/gd"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:layout_alignStart="@+id/gd"
                        android:id="@+id/txtFirsts"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="B'"
                        android:textAlignment="center"
                        android:layout_marginStart="120dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:layout_alignStart="@+id/txtFirsts"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textAlignment="center"
                        android:layout_marginStart="170dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />




                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="-4dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/txtColumn1"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="A"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="20dp"
                                android:textColor="@color/black"
                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                >

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn0"
                                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:padding="20dp"
                                    android:stateListAnimator="@null"
                                    android:text="0"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:backgroundTint="@android:color/transparent"
                                    app:cornerRadius="0dp"
                                    app:rippleColor="@color/primary"
                                    app:strokeColor="@color/primary"
                                    app:strokeWidth="2dp" />



                            </RelativeLayout>


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn1"
                                android:layout_weight="1"
                                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/primary"
                                android:fontFamily="@font/poppinssemibold"
                                android:padding="20dp"
                                android:stateListAnimator="@null"
                                android:text="0"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:backgroundTint="@android:color/transparent"
                                app:cornerRadius="0dp"
                                app:rippleColor="@color/primary"
                                app:strokeColor="@color/primary"
                                app:strokeWidth="2dp" />






                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginTop="-10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/txtColumn2"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="A'"
                                android:textAlignment="center"
                                android:layout_marginHorizontal="20dp"
                                android:textColor="@color/black"
                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                >

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn2"

                                    style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinssemibold"
                                    android:padding="20dp"
                                    android:stateListAnimator="@null"
                                    android:text="0"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:backgroundTint="@android:color/transparent"
                                    app:cornerRadius="0dp"
                                    app:rippleColor="@color/primary"
                                    app:strokeColor="@color/primary"
                                    app:strokeWidth="2dp" />



                            </RelativeLayout>


                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn3"
                                android:layout_weight="1"
                                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/primary"
                                android:fontFamily="@font/poppinssemibold"
                                android:padding="20dp"
                                android:stateListAnimator="@null"
                                android:text="0"
                                android:textAllCaps="false"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                app:backgroundTint="@android:color/transparent"
                                app:cornerRadius="0dp"
                                app:rippleColor="@color/primary"
                                app:strokeColor="@color/primary"
                                app:strokeWidth="2dp" />




                        </LinearLayout>
                    </LinearLayout>

                    <!--         Number First row-->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="36dp"
                        >

                        <TextView
                            android:id="@+id/txtdisplay0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:background="@color/primary"
                            android:text="0"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/txtdisplay1"
                            android:layout_alignStart="@+id/txtdisplay0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:background="@color/primary"
                            android:text="1"
                            android:layout_marginStart="160dp"
                            android:textColor="@color/white"
                            />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="100dp"
                        >

                        <TextView
                            android:id="@+id/txtdisplay4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:background="@color/primary"
                            android:text="2"
                            android:textColor="@color/white"
                            />

                        <TextView
                            android:id="@+id/txtdisplay5"
                            android:layout_alignStart="@+id/txtdisplay4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:background="@color/primary"
                            android:text="3"
                            android:layout_marginStart="160dp"
                            android:textColor="@color/white"
                            />





                    </RelativeLayout>
                </RelativeLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/morethan2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:id="@+id/g"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:layout_alignStart="@+id/g"
                        android:id="@+id/txtFirst"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textAlignment="center"
                        android:layout_marginStart="80dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />


                    <TextView
                        android:layout_alignStart="@+id/txtFirst"
                        android:id="@+id/txtSecond"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="BCD"
                        android:textAlignment="center"
                        android:layout_marginStart="80dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_alignStart="@+id/txtSecond"
                        android:id="@+id/txtThird"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="BCF"
                        android:textAlignment="center"
                        android:layout_marginStart="80dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_alignStart="@+id/txtThird"
                        android:id="@+id/txtFourth"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="BCF"
                        android:textAlignment="center"
                        android:layout_marginStart="80dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerate"
                style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/primary"
                android:fontFamily="@font/poppinssemibold"
                android:paddingHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="end"
                android:paddingVertical="10dp"
                android:stateListAnimator="@null"
                android:text="Generate"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:rippleColor="@color/highlight"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </ScrollView>




</LinearLayout>
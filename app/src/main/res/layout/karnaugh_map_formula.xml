<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".KarnaughMap.FormulaKarnaughMap">


    <!--    Header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/shadow"
        android:outlineSpotShadowColor="@color/shadow"
        android:background="@drawable/shadow"
        >

        <!--        Back Icon-->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="@drawable/ripple_back_button"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Karnaugh Map"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsbold"
            />

        <ImageView
            android:id="@+id/imgPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pdf"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>
    <!--    -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:id="@+id/ll_output"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solution"
                        android:textSize="16sp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppinssemibold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="K-Map"
                        android:textSize="16sp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppinssemibold"
                        />

                    <TextView
                        android:id="@+id/txtInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Input = âˆ‘ (1, 4, 5, 6, 7)"
                        android:layout_marginVertical="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppinsregular"
                        />


                    <!-- KMAP-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <!--            TODO Table-->
                        <TableLayout
                            android:id="@+id/kmapTableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/white"
                            android:stretchColumns="*">


                        </TableLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truth Table"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppinssemibold"
                        />

                    <!--            Table-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        app:contentPadding="10dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/inputfield"
                        >


                        <!--            TODO Table-->
                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:stretchColumns="*">



                        </TableLayout>


                    </androidx.cardview.widget.CardView>




                    <!-- GROUPING-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grouping"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppinssemibold"
                            />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/spinner_background"
                            android:spinnerMode="dropdown"/>

                        <TextView
                            android:id="@+id/karnaugh0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/grouping_description"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />



                        <!--            Group Table-->
                        <!--            TODO Table-->
                        <TableLayout
                            android:id="@+id/groupTableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:stretchColumns="*">

                        </TableLayout>

                        <!--Group 1-->

                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group 1:"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Positions = {4,5,7,6}"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:fontFamily="@font/poppinsregular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simplified Expression = A"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <!--Group 1-->


                        <TextView
                            android:id="@+id/txtSolution"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:id="@+id/txtAnswer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />


                        <TextView
                            android:id="@+id/txtSimplified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />



                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group 2:"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Positions = {1, 2}"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:visibility="gone"

                            android:fontFamily="@font/poppinsregular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simplified Expression = B'C"
                            android:textSize="12sp"
                            android:visibility="gone"

                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <TextView
                            android:id="@+id/txtResult"
                            android:layout_marginTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsbold"
                            />

                        <ProgressBar
                            android:id="@+id/ProgressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:layout_marginVertical="20dp"
                            />

                    </LinearLayout>

                    <!-- SIMPlify Expression-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppinssemibold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simplify Expression"
                            android:textSize="16sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppinssemibold"
                            />



                        <WebView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="1000dp"
                            android:id="@+id/webview"
                            />

                        <!--            Table-->
                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            app:contentPadding="15dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/inputfield"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="F = A + Bâ€™C"
                                android:textSize="12sp"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/poppinsbold"
                                />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Logic Diagram-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="50dp"
                        android:visibility="gone"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logic Diagram"
                            android:textSize="16sp"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppinssemibold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logic_diagram_description"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_gravity="center"
                            android:layout_marginVertical="20dp"
                            android:layout_height="200dp"
                            android:src="@drawable/gate"
                            />

                        <Spinner
                            android:id="@+id/spinner_export"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="10dp"
                            android:layout_gravity="end"
                            android:paddingHorizontal="20dp"
                            android:background="@drawable/spinner_background"
                            android:spinnerMode="dropdown"/>


                    </LinearLayout>


                    <!-- SIMPlify Expression-->
                    <LinearLayout
                        android:id="@+id/container_simplify"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppinssemibold"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simplify Expression"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />


                        <TextView
                            android:layout_marginVertical="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F = A + Bâ€™C"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsbold"
                            />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Answer"
                            android:textSize="12sp"
                            android:textColor="@color/primary"
                            android:fontFamily="@font/poppinsmedium"
                            />

                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expression is already simplified"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppinsregular"
                            />

                        <!--            Table-->
                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            app:contentPadding="15dp"
                            app:cardElevation="0dp"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/inputfield"
                            >

                            <TextView
                                android:id="@+id/txtSimplifiedExpression"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="@color/primary"
                                android:fontFamily="@font/poppinsbold"
                                />


                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


            <LinearLayout
                android:id="@+id/containerLogicDiagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="50dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logic Diagram"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/poppinssemibold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logic_diagram_description"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppinsregular"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/myImageView"
                            android:layout_width="420dp"
                            android:layout_height="420dp"/>
                    </LinearLayout>
                </HorizontalScrollView>


                <com.google.android.material.button.MaterialButton
                    android:layout_marginVertical="10dp"
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:text="Save Diagram"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/spinner_background"
                    />



            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>